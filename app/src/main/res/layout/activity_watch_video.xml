<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context=".WatchVideoActivity">

    <Button
        android:id="@+id/go_away_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go back" />

    <Button
        android:id="@+id/prev_video_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="prev" />

    <LinearLayout
        android:id="@+id/video_info_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/video_info_txt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="" />

        <Switch
            android:id="@+id/starred_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <com.google.android.exoplayer2.ui.PlayerView
        android:id="@+id/video_player_view"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        app:controller_layout_id="@layout/exo_player_custom_control_view"
        app:player_layout_id="@layout/exo_simple_player_view"
        app:resize_mode="fixed_height"
        app:show_timeout="45000"
        app:surface_type="texture_view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/video_recommend_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" />
</LinearLayout>